{% extends 'index.html.twig' %}

        {% block contenu %}

            {% block listeUser %}
                <div class="container mt-5">
                    <div class="row tm-content-row">
                        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
                        <div class="tm-bg-primary-dark tm-block tm-block-products">
                            <div class="tm-product-table-container">
                            <table class="table table-hover tm-table-small tm-product-table">
                                <thead>
                                <tr>
                                    <th scope="col">&nbsp;</th>
                                    <th scope="col">NOM</th>
                                    <th scope="col">PRENOM</th>
                                    <th scope="col">EMAIL</th>
                                    <th scope="col">TELEPHONE</th>
                                    <th scope="col">ETAT</th>
                                    <th scope="col">ACTION</th>
                                    <th scope="col">&nbsp;</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                    <tr>
                                    <th scope="row">1</th>
                                    <td>{{ user.getNom() }}</td>
                                    <td>{{ user.getPrenom() }}</td>
                                    <td>{{ user.getEmail() }}</td>
                                    <td>{{ user.getTelephone() }}</td>
                                    <td>{{ user.getEtat() }}</td>
                                    <td>
                                        <span class="mx-3 text-decoration-none text-white">
                                            <a class="text-decoration-none text-white" href="{{ path('modifier_user', {'user_id': user.getId()}) }}">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </span>
                                        <span class="mx-3 text-decoration-none text-white">
                                            <a class="text-decoration-none text-white" href="{{ path('supprimer_user', {'user_id': user.getId()}) }}">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </span>
                                    </td>
                                    </tr>
                                    {% endfor %}
                                </tbody> 
                            </table>
                            </div>
                                <!-- table container -->
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            {% endblock listeUser %}

        {% endblock contenu %}