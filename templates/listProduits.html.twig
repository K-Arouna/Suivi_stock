{% extends 'index.html.twig' %}

        {% block contenu %}

            {% block listeProduits %}
                <div class="container mt-5">
                    <div class="row tm-content-row">
                        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
                        <div class="tm-bg-primary-dark tm-block tm-block-products">
                            <div class="tm-product-table-container">
                            <table class="table table-hover tm-table-small tm-product-table">
                                <thead>
                                <tr>
                                    <th scope="col">&nbsp;</th>
                                    <th scope="col">REFERENCE</th>
                                    <th scope="col">NOM PRODUIT</th>
                                    <th scope="col">QUANTITE STOCK</th>
                                    <th scope="col">ACTION</th>
                                    <th scope="col">&nbsp;</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for produit in produits %}
                                    <tr>
                                    <th scope="row">{{ produit.getId() }}</th>
                                    <td>{{ produit.getReference() }}</td>
                                    <td>{{ produit.getNomproduit() }}</td>
                                    <td>{{ produit.getQuantite() }}</td>
                                    <td>
                                        <span class="mx-3 text-decoration-none text-white">
                                            <a class="text-decoration-none text-white" href="{{ path('modifier_produit', {'produit_id': produit.getId()}) }}">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </span>
                                        <span class="mx-3 text-decoration-none text-white">
                                            <a class="text-decoration-none text-white" href="{{ path('supprimer_produit', {'produit_id': produit.getId()}) }}">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </span>
                                    </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                
                            </table>
                            </div>
                            <!-- table container -->
                        </div>
                        </div>
                        </div>
                    </div>
                </div>
            {% endblock listeProduits %}
            
        {% endblock contenu %}